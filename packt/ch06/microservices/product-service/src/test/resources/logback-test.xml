<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Define File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>product-service.log</file> <!-- Specify the name of the log file -->
        <append>true</append> <!-- Set to true if you want the logs to be appended to the file -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern> <!-- Define your log pattern -->
        </encoder>
    </appender>

    <!-- Apply the appender to the root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
